class Solution {
public:
    int numberOfSpecialChars(string word)
    {
        int num=0;
        for(char c='a';c<='z';c++)
        {
            int t1=0,t2=0;
            for(char letter:word)
            {
                if(c == letter)
                t1=1;
                if(c-32 == letter)
                t2=1;
            }
            if(t1&&t2)
            num++;
        }
        return num;
    }
};
